<h1 class="mb-4">Admin Dashboard</h1>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Distributors</h5>
        <p class="display-4"><%= @distributors_count %></p>
        <%= link_to "Manage", admin_distributors_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Products</h5>
        <p class="display-4"><%= @products_count %></p>
        <%= link_to "Manage", admin_products_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Total Orders</h5>
        <p class="display-4"><%= @orders_count %></p>
      </div>
    </div>
  </div>
</div>

<div class="card mb-4 bg-light">
  <div class="card-body">
    <%= search_form_for @q, url: admin_dashboard_path, method: :get, class: "row g-3" do |f| %>
      <div class="col-md-4">
        <%= f.label :order_number_cont, "Search Order Number", class: "form-label" %>
        <%= f.search_field :order_number_cont, class: "form-control", placeholder: "e.g. ORD-123" %>
      </div>
      
      <div class="col-md-4">
        <%= f.label :distributor_name_cont, "Search Distributor", class: "form-label" %>
        <%= f.search_field :distributor_name_cont, class: "form-control", placeholder: "Company name..." %>
      </div>

      <div class="col-md-4 d-flex align-items-end">
        <%= f.submit "Search", class: "btn btn-primary me-2" %>
        <%= link_to "Clear", admin_dashboard_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<h3 class="mb-3">Recent Orders</h3>
<h3 class="mb-3"><%= @recent_orders.count %></h3>
<% if @recent_orders.any? %>
  <div class="table-responsive">
    <table class="table table-striped">
<thead>
  <tr>
    <%# 1. Simple Column Sort %>
    <th><%= sort_link(@q, :order_number, "Order #") %></th>

    <%# 2. Association Sort (Sorting by Distributor Name) %>
    <th><%= sort_link(@q, :distributor_name, "Distributor") %></th>

    <%# 3. Association Sort (Sorting by User Email) %>
    <th><%= sort_link(@q, :user_email, "User") %></th>

    <th><%= sort_link(@q, :required_delivery_date, "Delivery Date") %></th>
    <th><%= sort_link(@q, :total_amount, "Total Amount") %></th>
    <th><%= sort_link(@q, :created_at, "Created") %></th>
  </tr>
</thead>
      <tbody>
        <% @recent_orders.each do |order| %>
          <tr>
            <td><%= order.order_number %></td>
            <td><%= order.distributor.name %></td>
            <td><%= order.user.email %></td>
            <td><%= order.required_delivery_date.strftime('%Y-%m-%d') %></td>
            <td><%= order.order_items.first.sku.currency%> <%= number_with_precision(order.total_amount, precision: 2, delimiter: ',') %></td>
            <td><%= order.created_at.strftime('%Y-%m-%d %H:%M') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


<%# Add the pagination links here %>
<div class="d-flex justify-content-center mt-4">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
<% else %>
  <p class="text-muted">No orders yet.</p>
<% end %>
