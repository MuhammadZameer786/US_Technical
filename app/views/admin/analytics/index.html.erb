<div class="row mb-4">
  <div class="col-12">
    <h1 class="mb-2">
      <i class="bi bi-graph-up text-primary"></i> Analytics Dashboard
    </h1>
    <p class="text-muted">Insights and performance metrics</p>
  </div>
</div>

<!-- Date Range Filter -->
<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <%= form_with url: admin_analytics_path, method: :get, class: "row g-3 align-items-end" do |f| %>
      <div class="col-md-4">
        <%= label_tag :start_date, "Start Date", class: "form-label fw-bold" %>
        <%= date_field_tag :start_date, @start_date, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= label_tag :end_date, "End Date", class: "form-label fw-bold" %>
        <%= date_field_tag :end_date, @end_date, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= submit_tag "Update Report", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Key Metrics -->
<div class="row mb-4">
  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <i class="bi bi-currency-dollar display-4 text-success mb-3"></i>
        <h6 class="text-muted text-uppercase mb-2">Total Revenue</h6>
        <h2 class="text-success mb-0">
          ZAR <%= number_with_precision(@total_revenue, precision: 2, delimiter: ',') %>
        </h2>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <i class="bi bi-cart-check display-4 text-primary mb-3"></i>
        <h6 class="text-muted text-uppercase mb-2">Total Orders</h6>
        <h2 class="text-primary mb-0"><%= @total_orders %></h2>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <i class="bi bi-calculator display-4 text-warning mb-3"></i>
        <h6 class="text-muted text-uppercase mb-2">Avg Order Value</h6>
        <h2 class="text-warning mb-0">
          ZAR <%= number_with_precision(@average_order_value, precision: 2, delimiter: ',') %>
        </h2>
      </div>
    </div>
  </div>

  <div class="col-md-3 mb-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body text-center">
        <i class="bi bi-box display-4 text-info mb-3"></i>
        <h6 class="text-muted text-uppercase mb-2">Total Units Sold</h6>
        <h2 class="text-info mb-0"><%= number_with_delimiter(@total_units) %></h2>
      </div>
    </div>
  </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
  <!-- Orders Over Time -->
  <div class="col-md-6 mb-3">
    <div class="card shadow-sm">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="bi bi-graph-up me-2"></i>Orders Over Time
        </h5>
      </div>
      <div class="card-body">
        <canvas id="ordersChart" height="250"></canvas>
      </div>
    </div>
  </div>

  <!-- Revenue Over Time -->
  <div class="col-md-6 mb-3">
    <div class="card shadow-sm">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="bi bi-currency-dollar me-2"></i>Revenue Over Time
        </h5>
      </div>
      <div class="card-body">
        <canvas id="revenueChart" height="250"></canvas>
      </div>
    </div>
  </div>
</div>

<!-- Top Performers Row -->
