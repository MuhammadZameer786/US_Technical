<!-- Top Products -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="bi bi-star me-2"></i>Top Products
        </h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
