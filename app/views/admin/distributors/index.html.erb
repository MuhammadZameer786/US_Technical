<h1 class="mb-4">Distributors</h1>

<div class="mb-3">
  <%= link_to "Add New Distributor", new_admin_distributor_path, class: "btn btn-primary" %>
</div>

<% if @distributors.any? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Currency Code</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @distributors.each do |distributor| %>
          <tr>
            <td><strong><%= distributor.name %></strong></td>
            <td><%= distributor.currency%></td>
            <td>
            <%= distributor.users.map(&:email).join(", ") %>            
            </td>    
            <td>
              <%= link_to "View", admin_distributor_path(distributor), class: "btn btn-sm btn-info" %>
              <%= link_to "Edit", edit_admin_distributor_path(distributor), class: "btn btn-sm btn-warning" %>
              <%= button_to "Delete", admin_distributor_path(distributor), method: :delete, 
                  data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%# The pagination links go here, outside the table div %>
  <div class="d-flex justify-content-center mt-4">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% else %>
  <p class="text-muted">No distributors yet.</p>
<% end %>
