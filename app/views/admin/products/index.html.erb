<h1 class="mb-4">Products</h1>

<div class="mb-3">
  <%= link_to "Add New Product", new_admin_product_path, class: "btn btn-primary" %>
</div>


<% if params[:distributor_id] %>
  <div class="alert alert-info">
    Selecting a product to assign to <strong><%= Distributor.find(params[:distributor_id]).name %></strong>
  </div>
<% end %>

<% if @products.any? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>SKUs</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>

          <tr>
            <td><strong><%= product.name %></strong></td>
            <td><%= truncate(product.description, length: 100) %></td>
            <td><%= pluralize(product.skus.count, 'SKU') %></td>
            
            <td>


<% if params[:distributor_id] %>
  <%# Selection Mode: Go straight to the SKU form %>
  <%= link_to "Select", 
      new_admin_product_sku_path(product, distributor_id: params[:distributor_id]), 
      class: "btn btn-sm btn-success" %>
<% else %>
  <%# Standard Mode: Go to Product Details %>
  <%= link_to "View", 
      admin_product_path(product), 
      class: "btn btn-sm btn-info" %>
<% end %>


       <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-sm btn-warning" %>
        <%= button_to "Delete", admin_product_path(product), method: :delete, 
                  data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <% if params[:distributor_id] %>
  <div class="text-center py-5">
    <p class="text-muted">
      <%= params[:distributor_id] ? "This distributor already has all available products assigned." : "No products yet." %>
    </p>
  </div>
  <%else%>
  <p class="text-muted">No products yet.</p>
  <%end%>
<% end %>
