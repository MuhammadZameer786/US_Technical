<h1 class="mb-4">Users</h1>

<div class="mb-3">
  <%= link_to "Add New User", new_admin_user_path, class: "btn btn-primary" %>
</div>

<% if @users.any? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Email</th>
          <th>User Type</th>
          <th>Distributor</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td>
              <% if user.admin? %>
                <span class="badge bg-danger">Admin</span>
              <% else %>
                <span class="badge bg-primary">Distributor</span>
              <% end %>
            </td>
            <td><%= user.distributor&.name || '-' %></td>
            <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
            <td>
              <%= link_to "Show", admin_user_path(user), class: "btn btn-sm btn-info" %>
              <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-warning" %>
              <% unless user == current_user %>
                <%= button_to "Delete", admin_user_path(user), method: :delete, 
                    data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-muted">No users yet.</p>
<% end %>
