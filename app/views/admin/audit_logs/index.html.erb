<div class="row mb-4">
  <div class="col-12">
    <h1 class="mb-2">
      <i class="bi bi-clock-history text-primary"></i> Audit Trail
    </h1>
    <p class="text-muted">Track all changes made to the system</p>
  </div>
</div>

<!-- Filters -->
<div class="card mb-4 shadow-sm">
  <div class="card-header bg-white border-bottom">
    <h5 class="mb-0">
      <i class="bi bi-funnel me-2"></i>Filter Activity
    </h5>
  </div>
  <div class="card-body">
    <%= search_form_for @q, url: admin_audit_logs_path, method: :get do |f| %>
      <div class="row g-3">
        <!-- Filter by Model Type -->
        <div class="col-md-3">
          <%= f.label :item_type_eq, class: "form-label fw-bold" do %>
            <i class="bi bi-box me-1"></i>Record Type
          <% end %>
          <%= f.select :item_type_eq,
              options_for_select(
                [
                  ['All Types', ''],
                  ['Orders', 'Order'],
                  ['Products', 'Product'],
                  ['SKUs', 'Sku'],
                  ['Distributors', 'Distributor'],
                  ['Users', 'User']
                ],
                params.dig(:q, :item_type_eq)
              ),
              {},
              { class: "form-select" } %>
        </div>

        <!-- Filter by Event Type -->
        <div class="col-md-3">
          <%= f.label :event_eq, class: "form-label fw-bold" do %>
            <i class="bi bi-lightning me-1"></i>Action Type
          <% end %>
          <%= f.select :event_eq,
              options_for_select(
                [
                  ['All Actions', ''],
                  ['Created', 'create'],
                  ['Updated', 'update'],
                  ['Deleted', 'destroy']
                ],
                params.dig(:q, :event_eq)
              ),
              {},
              { class: "form-select" } %>
        </div>

        <!-- Filter by User -->
        <div class="col-md-3">
          <%= f.label :whodunnit_cont, class: "form-label fw-bold" do %>
            <i class="bi bi-person me-1"></i>User
          <% end %>
          <%= f.search_field :whodunnit_cont,
              class: "form-control",
              placeholder: "Email or username..." %>
        </div>

        <!-- Filter by Date -->
        <div class="col-md-3">
          <%= f.label :created_at_gteq, class: "form-label fw-bold" do %>
            <i class="bi bi-calendar me-1"></i>From Date
          <% end %>
          <%= f.date_field :created_at_gteq, class: "form-control" %>
        </div>

        <!-- Action Buttons -->
        <div class="col-md-12">
          <div class="d-flex gap-2">
            <%= f.submit "Apply Filters", class: "btn btn-primary" %>
            <%= link_to admin_audit_logs_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-x-circle me-1"></i>Clear
            <% end %>
            
            <% if params[:q].present? %>
              <span class="badge bg-info align-self-center ms-2">
                <i class="bi bi-funnel-fill me-1"></i>Filters Active
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Activity Log Table -->
<div class="card shadow-sm">
  <div class="card-header bg-white border-bottom">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">
        <i class="bi bi-list-ul me-2"></i>Activity Log
      </h5>
      <span class="badge bg-primary"><%= @pagy.count %> events</span>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @versions.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th width="10%">
                <i class="bi bi-lightning me-1"></i>Action
              </th>
              <th width="15%">
                <i class="bi bi-box me-1"></i>Type
              </th>
              <th width="20%">
                <i class="bi bi-hash me-1"></i>Record
              </th>
              <th width="20%">
                <i class="bi bi-person me-1"></i>User
              </th>
              <th width="20%">
                <i class="bi bi-clock me-1"></i>When
              </th>
              <th width="15%">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @versions.each do |version| %>
              <tr>
                <td>
                  <%= render_event_badge(version.event) %>
                </td>
                <td>
                  <span class="badge bg-secondary">
                    <%= version.item_type %>
                  </span>
                </td>
                <td>
                  <% if version.item.present? %>
                    <%= render_record_info(version) %>
                  <% else %>
                    <span class="text-muted">Deleted Record #<%= version.item_id %></span>
                  <% end %>
                </td>
                <td>
                  <small>
                    <i class="bi bi-person-circle me-1"></i>
                    <%= version.whodunnit || 'System' %>
                  </small>
                </td>
                <td>
                  <%= version.created_at.strftime('%d %b %Y') %>
                  <br>
                  <small class="text-muted">
                    <%= version.created_at.strftime('%I:%M %p') %>
                  </small>
                </td>
                <td>
                  <%= link_to admin_audit_log_path(version), class: "btn btn-sm btn-outline-info" do %>
                    <i class="bi bi-eye me-1"></i>Details
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="card-footer bg-light">
        <div class="d-flex justify-content-between align-items-center">
          <div class="text-muted small">
            Showing <%= @pagy.from %> to <%= @pagy.to %> of <%= @pagy.count %> events
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h4 class="mt-3 text-muted">No Activity Found</h4>
        <% if params[:q].present? %>
          <p class="text-muted">Try adjusting your filters</p>
        <% else %>
          <p class="text-muted">No activity has been logged yet</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>